<?xml version="1.0" encoding="UTF-8"?>
<beans default-destroy-method="destroy" default-init-method="afterPropertiesSet"
	xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  
	
	<!-- Listeners -->
	<bean id="messageListener.liferay.lms.evaluation_listener"
		class="com.liferay.lms.EvaluationActivity" />
	
	<!-- Destinations -->
	<bean id="destination.liferay.lms.evaluation"
		class="com.liferay.portal.kernel.messaging.SerialDestination">
		<property name="name" value="liferay/lms/evaluation" />
	</bean>
	
	<!-- Configurator -->
	<bean id="messagingConfigurator"
		class="com.liferay.portal.kernel.messaging.config.PluginMessagingConfigurator">
		<property name="messageListeners">
			<map key-type="java.lang.String" value-type="java.util.List">
				<entry key="liferay/lms/evaluation">
					<list value-type="com.liferay.portal.kernel.messaging.MessageListener">
						<ref bean="messageListener.liferay.lms.evaluation_listener" />
					</list>
				</entry>
			</map>
		</property>
		<property name="destinations">
			<list>
				<ref bean="destination.liferay.lms.evaluation" />
			</list>
		</property>
	</bean>
</beans>