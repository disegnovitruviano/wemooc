<?xml version="1.0"?>

<portlet-app
	version="2.0"
	xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
>
	<portlet>
		<portlet-name>groupmailing</portlet-name>
		<display-name>GroupMailing</display-name>
		<portlet-class>
			com.tls.liferaylms.mail.GroupMailing
		</portlet-class>
		<init-param>
			<name>view-jsp</name>
			<value>/html/groupmailing/view.jsp</value>
		</init-param>
		<init-param>
		      <name>add-process-action-success-action</name>
		      <value>false</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<supported-locale>es</supported-locale>
		<supported-locale>en</supported-locale>
		<supported-locale>pt</supported-locale>
		<resource-bundle>content/Language</resource-bundle>
		<portlet-info>
			<title>GroupMailing</title>
			<short-title>GroupMailing</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>managetemplates</portlet-name>
		<display-name>ManageTemplates</display-name>
		<portlet-class>
			com.tls.liferaylms.mail.ManageTemplates
		</portlet-class>
		<init-param>
			<name>view-jsp</name>
			<value>/html/managetemplates/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<supported-locale>es</supported-locale>
		<supported-locale>en</supported-locale>
		<supported-locale>pt</supported-locale>
		<resource-bundle>content/Language</resource-bundle>
		<portlet-info>
			<title>ManageTemplates</title>
			<short-title>ManageTemplates</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>mailjob</portlet-name>
		<display-name>Mail Job</display-name>
		<portlet-class>
			com.tls.liferaylms.job.MailJobPortlet
		</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/mailjob/view.jsp</value>
		</init-param>
		<init-param>
			<name>edit-template</name>
			<value>/html/mailjob/edit.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<portlet-info>
			<title>Mail Job</title>
			<short-title>Mail Job Portlet</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>